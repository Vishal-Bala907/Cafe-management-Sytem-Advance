<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="500.0" maxWidth="800.0" minHeight="500.0"
	minWidth="404.0" prefHeight="500.0" prefWidth="460.0"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.CafeManageMent.CafeManageSys.ResetPassword">
	<children>
		<AnchorPane prefHeight="500.0" prefWidth="461.0"
			style="-fx-background-color: #ccffff;">
			<children>
				<Label alignment="CENTER" contentDisplay="CENTER"
					layoutX="25.0" layoutY="91.0" prefHeight="62.0" prefWidth="404.0"
					text="Password Reset" textFill="#004c83">
					<font>
						<Font name="Bookman Old Style" size="46.0" />
					</font>
				</Label>
				<Label alignment="CENTER" contentDisplay="CENTER"
					layoutX="14.0" layoutY="161.0" prefHeight="51.0" prefWidth="434.0"
					text="Please enter your your user name and password reset code "
					wrapText="true">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
				<TextField fx:id="userName" layoutX="125.0"
					layoutY="212.0" prefHeight="27.0" prefWidth="204.0"
					promptText="Usernmae" />
				<TextField fx:id="resetCode" layoutX="125.0"
					layoutY="250.0" prefHeight="27.0" prefWidth="204.0"
					promptText="passwordresetcode" />
				<Button fx:id="loginButton" layoutX="144.0" layoutY="352.0"
					mnemonicParsing="false" onAction="#switchToSecondary"
					style="-fx-background-color: black;" text="Reset" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Button fx:id="quitButton" layoutX="260.0" layoutY="352.0"
					mnemonicParsing="false" onAction="#quiutAction"
					style="-fx-background-color: black;" text="Quit" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<TextField fx:id="newPassword" layoutX="125.0"
					layoutY="291.0" prefHeight="27.0" prefWidth="204.0"
					promptText="new password" />
			</children>
		</AnchorPane>
	</children>
</HBox>
